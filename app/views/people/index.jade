doctype html
html
head
  meta(charset='utf-8')
  title Address Book
  link(rel='stylesheet', href='/css/style.css')
body
  h1 Address Book
  nav
    ul
      li: a(href='/') Home
      li: a(href='/people') People
      li: a(href='/about') About
      li: a(href='/faq') FAQ
      li: a(href='/contact') Contact
  h3 People

  each person in people
    .person: a(href='#{person.website}')
        .name(style='background: #{person.color}')=person.name
        ul
          li: a(href='#{person.email}') #{person.email}
          li=person.phone
